    	$('#image').change(function(){
        	//var img = $(this).
			var size = parseInt(this.files[0].size, 10);
			if(size < 50000 && size > 10000)
			{
				alert('ok' + size);
				var name = this.files[0].name;
				if(name.match(/.jpg/g) || name.match(/.png/g) || name.match(/.gif/g))
				{
					alert('file type ok');
					var image = $('#image').attr('value');
					alert(image);
					var urlsaveimage = "<?php echo $this->url(array('controller' => 'student', 'action' => 'saveimage'))?>";
		            $.ajax({
		        		url : urlsaveimage,
		                data : {image:image},
		        		success: function(jStatus){
		        			
		                },
		                error: function(response) {
		        			$('#errorBox').text(response.responseText).parent().show();
		        			console.log(response);
		        		}
		        	});
				}
				else
				{
					alert('not ok');
				}
			}
			else
			{
				alert('not ok' + size);
			}
    	});
    });
    
	function get_params()
	{
		formData = {};
		personal_info = {};
		$('form#personal_info :input')
		.not('button')
		.each(function(){
			personal_info[this.name] = this.value;
		});

		formData['personal_info'] = personal_info;
		return formData;
	}
    
    function submit()
    {
    	var urlSaveInfo = '<?php echo $this->url(array('controller' => 'student', 'action' => 'savepersonalinfo'))?>';
        $.ajax({
            url : urlSaveInfo,
            data : {
                	myarray : get_params(),
					format : 'json'
                	},
            success: function(jStatus){
                alert('Your information has been saved sucessfully');
                window.location.replace('/student/viewpersonalinfo');
            },
    		error: function(response) {
    			$('#errorBox').text(response.responseText).parent().show();
    			console.log(response);
    		}
    	});
    }

